<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Habits</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1 class="text-center my-5">My Habits</h1>

    {{#if habits.length}}
      <div class="row">
        {{#each habits}}
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
                <p><strong>Frequency: </strong>{{this.frequency}}</p>
                <!-- Align buttons on the same line -->
                <div class="d-flex justify-content-between">
                  <!-- Edit Button -->
                  <a href="/habits/{{this._id}}/edit" class="btn edit-btn">Edit</a>
                  <!-- Delete Button -->
                  <form action="/habits/{{this._id}}/delete" method="POST" style="display: inline;">
                    <button type="submit" class="btn delete-btn">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p>No habits found. Start by adding one!</p>
    {{/if}}

    <a href="/habits/create" class="btn btn-primary btn-lg mt-4">Add New Habit</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
